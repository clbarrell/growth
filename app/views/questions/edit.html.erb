<h4 class='text-center'>Edit Question</h4>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <%= render 'form' %>
  </div>
</div>

<p>
  <%= link_to 'Back', @question, class: "btn btn-default" %>
  <%= link_to list_icon.concat(' All Questions'), goal_questions_path(@question.goal), class: "btn btn-info" %>
  <%= link_to trash_icon.concat(' Delete'), @question, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default pull-right" %>
</p>
