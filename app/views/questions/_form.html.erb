<div class="form-horizontal">
  <fieldset>
    <div class="form-group">
      <div class="col-sm-12">
      <%= form_for(@question) do |f| %>
        <% if @question.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>
            <ul>
            <% @question.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        </div>
    </div>
    <div class="form-group">
      <%= f.label :question, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :question, class: 'form-control validate' %>
        <%= f.hidden_field :goal_id, :value => @goal.id %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :qntype, "Question Type", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <div class="btn-group" data-toggle="buttons">
          <%= f.label :qntype, value: "Checkin", class: "btn btn-info" do %>
          <%= f.radio_button :qntype, "Checkin" %>Checkin
          <% end %>
          <%= f.label :qntype, value: "Review", class: "btn btn-info" do %>
          <%= f.radio_button :qntype, "Review" %>Review
          <% end %>
        </div>
        <span class="help-block">Is this a Checkin or Review question?</span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :scale, "Answer Type", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <div class="btn-group" data-toggle="buttons">
          <%= f.label :scale, value: "Agreement", class: "btn btn-success" do %>
          <%= f.radio_button :scale, "Agreement" %>Agreement
          <% end %>
          <%= f.label :scale, value: "Comment", class: "btn btn-success" do %>
          <%= f.radio_button :scale, "Comment" %>Comment
          <% end %>
          <%= f.label :scale, value: "True/False", class: "btn btn-success" do %>
          <%= f.radio_button :scale, "True/False" %>True/False
          <% end %>
        </div>
        <span class="help-block">Agreement / Comment / True-False</span>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2"><br>
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
</div>
<% end %>
