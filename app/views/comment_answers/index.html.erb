<p id="notice"><%= notice %></p>

<h1>Listing Comment Answers</h1>

<table>
  <thead>
    <tr>
      <th>Answer</th>
      <th>Date</th>
      <th>Question</th>
      <th>Goal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comment_answers.each do |comment_answer| %>
      <tr>
        <td><%= comment_answer.answer %></td>
        <td><%= comment_answer.date %></td>
        <td><%= comment_answer.question %></td>
        <td><%= comment_answer.goal %></td>
        <td><%= link_to 'Show', comment_answer %></td>
        <td><%= link_to 'Edit', edit_comment_answer_path(comment_answer) %></td>
        <td><%= link_to 'Destroy', comment_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

