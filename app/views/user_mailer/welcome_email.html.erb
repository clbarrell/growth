                            <tr>
                              <td align="center">
                                <table border="0" cellpadding="0" cellspacing="0" style="width:75%">
                                  <tbody>
                                    <tr>
                                      <td> <a href="<%= @url %>" target="_blank" style="width:100%">Create a goal!</a> </td>
                                    </tr>
                                  </tbody>
                                </table>
                              </td>
                            </tr>
                          </tbody>
                        </table>
                        <p>Thanks for joining and have a great day!</p>
                        <p> - Chris</p>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>

              <!-- END MAIN CONTENT AREA -->
              </table>

            <!-- START FOOTER -->
            <div class="footer">
              <table border="0" cellpadding="0" cellspacing="0">
                <tr>
                  <td class="content-block">
                    <span class="apple-link">Growth-focus. Made in Melbourne.</span>
                  </td>
                </tr>
              </table>
            </div>
            <!-- END FOOTER -->

<!-- END CENTERED WHITE CONTAINER --></div>
