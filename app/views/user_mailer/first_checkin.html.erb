<%= render 'head_stuff' %>
<!-- START CENTERED WHITE CONTAINER -->
<span class="preheader">You just checked in to your goal, <%= @goal %></span>
<table class="main">

    <!-- START MAIN CONTENT AREA -->
    <tr>
        <td class="wrapper">
            <table border="0" cellpadding="0" cellspacing="0">
                <tr>
                    <td>
                        <h1>You just checked in for the first time!</h1>
                        <p><%= image_tag("yay.gif", width: "50%") %></p>
                        <p>Nice check in to <b><%= @goal %></b>! Your goal allows for <%= @goal.frequency.downcase %> check ins.</p>
                        <h2>Description</h2>
                        <blockquote>
                            <%= @goal.description %>
                        </blockquote>
                        <% if @goal.success_description %>
                          <h2>What success looks like</h2>
                          <blockquote>
                              <%= @goal.success_description %>
                          </blockquote>
                        <% end %>
                        <table border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
                            <tbody>
                                <tr>
                                    <td align="center">
                                        <table border="0" cellpadding="0" cellspacing="0" style="width:75%">
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <a href="<%= @url_link %>" target="_blank" style="width:100%">Check in again :)</a>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <p>Time to check in again!</p>
                        <p>
                            - Chris</p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>

    <!-- END MAIN CONTENT AREA -->
</table>

<%= render 'footer' %>
