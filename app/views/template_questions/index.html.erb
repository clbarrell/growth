<p id="notice"><%= notice %></p>

<h1>Listing Template Questions</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Qntype</th>
      <th>Scale</th>
      <th>Default order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @template_questions.each do |template_question| %>
      <tr>
        <td><%= template_question.text %></td>
        <td><%= template_question.qntype %></td>
        <td><%= template_question.scale %></td>
        <td><%= template_question.default_order %></td>
        <td><%= link_to 'Show', template_question %></td>
        <td><%= link_to 'Edit', edit_template_question_path(template_question) %></td>
        <td><%= link_to 'Destroy', template_question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

