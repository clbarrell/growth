<div class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <div class="col-sm-12">
                <%= form_for(@goal) do |f| %>
                <% if @goal.errors.any? %>
                <div class="alert alert-danger">
                    <p><%= pluralize(@goal.errors.count, "error") %>
                        prohibited this goal from being saved:</p>
                    <ul>
                        <% @goal.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
                <% end %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :title, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
                <%= f.text_field :title, class: 'validate form-control', maxlength: 40 %>
                <span class="help-block">The shorter the goal title the better. Limited to 40 letters.</span>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :description, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
                <%= f.text_area :description, class: 'form-control', rows: "2" %>
                <span class="help-block">Describe what you want to achieve.</span>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :frequency, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
                <div class="btn-group" data-toggle="buttons">
                  <%= f.label :frequency, value: "Daily", class: "btn btn-info" do %>
                  <%= f.radio_button :frequency, "Daily" %>Daily
                  <% end %>
                  <%= f.label :frequency, value: "Weekly", class: "btn btn-info" do %>
                  <%= f.radio_button :frequency, "Weekly" %>Weekly
                  <% end %>
                  <%= f.label :frequency, value: "Fortnightly", class: "btn btn-info" do %>
                  <%= f.radio_button :frequency, "Fortnightly" %>Fortnightly
                  <% end %>
                  <%= f.label :frequency, value: "Monthly", class: "btn btn-info" do %>
                  <%= f.radio_button :frequency, "Monthly" %>Monthly
                  <% end %>
                  <%= f.label :frequency, value: "Quarterly", class: "btn btn-info" do %>
                  <%= f.radio_button :frequency, "Quarterly" %>Quarterly
                  <% end %>
                </div>
                <span class="help-block">How frequently do you want to check in against this goal?</span>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :goaltype, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <div class="btn-group" data-toggle="buttons">
                  <%= f.label :goaltype, value: "Standard", class: "btn btn-success" do %>
                  <%= f.radio_button :goaltype, "Standard" %>Standard
                  <% end %>
                  <%= f.label :goaltype, value: "Contextual", class: "btn btn-success" do %>
                  <%= f.radio_button :goaltype, "Contextual" %>Contextual
                  <% end %>
                </div>
                <span class="help-block">Is this goal contextual (When X happens, I'll do Y) or standard?</span>
            </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2 well">
            <p class="text-success">Success is...</p>
            <%= f.text_area :success_description, class: 'validate form-control' %>
          </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <%= f.submit class: "btn btn-default" %>
            </div>
            <% end %>
        </div>
    </fieldset>
</div>
