<div class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <div class="col-sm-12">
                <%= form_for(@goal) do |f| %>
                <% if @goal.errors.any? %>
                <div class="alert alert-danger">
                    <p><%= pluralize(@goal.errors.count, "error") %>
                        prohibited this goal from being saved:</p>
                    <ul>
                        <% @goal.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
                <% end %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :title, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
                <%= f.text_field :title, class: 'validate form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :description, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
                <%= f.text_area :description, class: 'form-control', rows: "2" %>
                <span class="help-block">Describe what you want to achieve.</span>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :frequency, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
                <%= f.select(:frequency, freq_options, { prompt: true }, { class: "form-control" }) %>
                <span class="help-block">How frequently do you want to check in against this goal?</span>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :goaltype, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.select(:goaltype, goal_type, { prompt: true }, { class: "form-control" }) %>
                <span class="help-block">Is this goal contextual or absolute?</span>
            </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2 well">
            <p class="text-success">Success is...</p>
            <%= f.text_area :success_description, class: 'validate form-control' %>
          </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <%= f.submit class: "btn btn-default" %>
            </div>
            <% end %>
        </div>
    </fieldset>
</div>
