<div class="visible-xs-block">
  <%= link_to time_icon.concat(" Checkin to goal"), checkin_goal_path(@goal), class: "btn btn-primary btn-block", "data-turbolinks" => false %><br>
</div>
<%= render 'goal_head' %>
<!-- YOU"VE CEHCKED IN X TIMES -->
<div class="row">
    <div class="col-sm-12">
        <div class="pull-right">
            <div class="dropdown">
                <button class="btn btn-link dropdown-toggle" type="button" id="sidegoalmenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    <span class="glyphicon glyphicon-option-vertical" aria-hidden="true"></span>
                </button>
                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="sidegoalmenu">
                    <li><%= link_to 'Edit goal', edit_goal_path(@goal), "data-turbolinks" => "false" %></li>
                    <li><%= link_to 'Delete goal', @goal,
                    data: {:confirm => 'Are you sure?'}, :method => :delete %></li>
                    <li><%= link_to "Check in", checkin_goal_path(@goal.id), "data-turbolinks" => false %></li>
                </ul>
            </div>
        </div>
        <p class="text-center lead">
          You've checked into this goal
          <strong><%= pluralize(@goal.checkin_count, "time") %></strong>
        </p>
    </div>
</div>
<div class="row">
    <!-- CHECKIN LOG -->
    <%= checkin_log_graph(@goal) %>
</div>
<!-- SUCCESS -->
<%= render 'success_description' if @goal.success_description? %>
<div class="row">
  <div class="col-sm-12 white-background">
    <h4>Questions</h4>
    <p>
      This goal has <%= pluralize(@goal.questions.count, "question") %>, view them <%= link_to "here", goal_questions_path(@goal) %>.
    </p>
  </div>
</div>


<%= yield :charts_js %>
