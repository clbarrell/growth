<div class="row">
    <div class="col-sm-12">
        <h3 class="text-center"><%= @goal.title %></h3>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <p id="notice" class="text-center"><%= notice %></p>
        <div class="well">
            <%= @goal.description %><br><br>
            <span class="label label-info"><%= @goal.frequency %></span>
            <span class="label label-default"><%= @goal.goaltype %></span>
        </div>
    </div>
</div>
<!-- YOU"VE CEHCKED IN X TIMES -->
<div class="row">
    <div class="col-sm-3">
        <%= link_to "Check in", checkin_goal_path(@goal.id), class: "btn btn-primary" %>
    </div>
    <div class="col-sm-6">
        <p class="text-center lead">
            You've checked into this goal
            <strong><%= pluralize(@goal.checkin_count, "time") %></strong>
        </p>
    </div>
    <div class="col-sm-3">
        <div class="pull-right">
            <div class="dropdown">
                <button class="btn btn-link dropdown-toggle" type="button" id="sidegoalmenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    <span class="glyphicon glyphicon-option-vertical" aria-hidden="true"></span>
                </button>
                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="sidegoalmenu">
                    <li><%= link_to 'Edit', edit_goal_path(@goal), "data-no-turbolink" => "true" %></li>
                    <li><%= link_to 'Delete', @goal,
                    data: {:confirm => 'Are you sure?'}, :method => :delete %></li>
                    <li class="divider"></li>
                    <li><%= link_to 'Reset questions', reset_goal_path(@goal) %></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- SUCCESS -->
<%= render 'success_description' if @goal.success_description? %>
<!-- CHECKIN QUESTIONS -->
<div class="row">
    <div class="col-sm-12">
        <h4 class="text-center">Checkin Questions</h4>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="col-sm-2">#</th>
                    <th class="col-sm-8">Question</th>
                    <th class="col-sm-2"></th>
                </tr>
            </thead>
            <tbody>
                <% @checkin_questions.each do |checkin_question| %>
                <tr>
                    <td><%= link_to checkin_question.qnorder, checkin_question %>
                        <div class="btn-group btn-group-xs">
                            <%= link_to "+", increase_question_path(checkin_question.id), class: "btn btn-default btn-group-xs", method: :put %>
                            <%= link_to "-", decrease_question_path(checkin_question.id), class: "btn btn-default btn-group-xs", method: :put %>
                        </div>
                    </td>
                    <td><%= checkin_question.question %></td>
                    <td>
                        <small class="text-muted"><%= checkin_question.scale %></small>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<!-- REVIEW QUESTIONS -->
<div class="row">
    <div class="col-sm-12">
        <h4 class="text-center">Review Questions</h4>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="col-sm-2">#</th>
                    <th class="col-sm-8">Question</th>
                    <th class="col-sm-2"></th>
                </tr>
            </thead>
            <tbody>
                <% @review_questions.each do |review_question| %>
                <tr>
                    <td><%= link_to review_question.qnorder, review_question %>
                        <div class="btn-group">
                            <%= link_to "+", increase_question_path(review_question.id), class: "btn btn-default btn-xs", method: :put %>
                            <%= link_to "-", decrease_question_path(review_question.id), class: "btn btn-default btn-xs", method: :put %>
                        </div>
                    </td>
                    <td><%= review_question.question %></td>
                    <td>
                        <small class="text-muted"><%= review_question.scale %></small>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <%= link_to 'Back', @goal.user, class: "btn btn-default" %>
        <%= link_to 'Add a question', new_goal_question_path(@goal), class: "btn btn-primary", "data-no-turbolink" => "true" %>
    </div>
</div>
