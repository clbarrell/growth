<!-- %= render 'layouts/notice' if notice? % -->
<div class="row">
  <div class="col-sm-12">
    <h3 class="text-center"><%= @goal.title %></h3>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="well">
      <%= @goal.description %><br>
      <span class="label label-default"><%= @goal.frequency %></span>
      <span class="label label-default"><%= @goal.goaltype %></span>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
      <p>
        You've checked into this goal <%= pluralize(@goal.checkin_count, "time") %>.
      </p>
      <h5>Questions</h5>
  </div>
  <div class="col-sm-3">
    <div class="pull-right text-right">
      <ul class="list-unstyled">
        <li><%= link_to 'Edit', edit_goal_path(@goal), "data-no-turbolink" => "true" %></li>
        <li><%= link_to 'Delete', @goal,
              data: {:confirm => 'Are you sure?'}, :method => :delete %></li>
      </ul>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= link_to 'Back', @goal.user, class: "btn btn-default" %>
  </div>
</div>
