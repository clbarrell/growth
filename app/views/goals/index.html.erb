<p id="notice"><%= notice %></p>

<h1>Listing Goals</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Frequency</th>
      <th>Type</th>
      <th>User</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.title %></td>
        <td><%= goal.description %></td>
        <td><%= goal.frequency %></td>
        <td><%= goal.goaltype %></td>
        <td><%= goal.user.name %></td>
        <td><%= link_to 'Show', goal %> / <%= link_to 'Edit', edit_goal_path(goal) %> / <%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

