// AJAX JS JQUERY
console.log("Adding the returned user");

// clear all html
$('div.user_found_or_not').html("");
<% if @email_valid == true %>
  // Set variables
  $('#email-field').val("<%= @target_user.email %>");
  <% if @user_found == true %>
    $('#submit-button-form').val("Give user access + let them know!");
    $('div.user_found_or_not').attr('class', 'user_found_or_not alert alert-success');
    $('div.user_found_or_not').html("Yes! <%= @target_user %> was found.");
  <% else %>
    $('#submit-button-form').val("Invite user to growth-focus + let them know");
    $('div.user_found_or_not').attr('class', 'user_found_or_not alert alert-info');
    $('div.user_found_or_not').html("Almost... user wasn't found but we can invite them!");
  <% end %>
  // show form
  $('#sgr_form_hidden').css('visibility', 'visible');
<% else %>
  // email not valid
  $('div.user_found_or_not').attr('class', 'user_found_or_not alert alert-warning');
  $('div.user_found_or_not').html("That email is invalid! Try again!");
<% end %>
